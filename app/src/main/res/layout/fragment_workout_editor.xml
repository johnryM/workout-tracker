<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_workout_editor_container"
    android:orientation="vertical"
    tools:context="com.example.skeeno.workouttracker.fragments.WorkoutEditorFragment">

    <include
    layout="@layout/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"/>

    <android.support.design.widget.TextInputLayout
    android:id="@+id/edit_text_layout_workout_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp">

    <EditText
        android:id="@+id/edit_text_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/workout_title_string"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_workout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Workout date"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"/>

    <CheckBox
        android:id="@+id/checkbox_workout_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/completed"
        android:layout_margin="5dp"/>

</LinearLayout>
